---
import TechTag from './TechTag.astro';
import Button from './Button.astro';

const { icon, title, description, tags, demoLink, codeLink } = Astro.props;
---

<div class="project-card">
    <div class="project-image">
        <i data-lucide={icon} class="w-16 h-16" style="color: var(--accent-primary)"></i>
    </div>
    <h3 class="text-2xl font-bold mb-3">{title}</h3>
    <p class="mb-4" style="color: var(--text-secondary)">{description}</p>
    <div class="flex flex-wrap gap-2 mb-6">
        {tags.map((tag: unknown) => (
            <TechTag>{tag}</TechTag>
        ))}
    </div>
    <div class="flex gap-3">
        <Button href={demoLink} icon="external-link">
            Ver Demo
